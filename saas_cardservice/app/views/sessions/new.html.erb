<h2 style = "color:white"> SIGN IN NOW </h2>
<div style = "color:white">
<%= form_tag login_create_path, :class => 'form' do %>
  <%= label :user, :user_id, "Username", :class => 'col-form-label'%>
  <%= text_field :user, 'user_id', :class => 'form-control', id: 'loginUser' %>
  <%= label :user, :email, "Email", :class => 'col-form-label' %>
  <%= text_field :user, 'email', :class => 'form-control', id: 'loginEmail' %>
  <%= submit_tag 'Login to my Account', :class => 'btn btn-primary', id: 'login_submit' %>
<% end %>
</div>
<%= button_to "Sign-Up", new_user_path, method: :get, id:'signup' %>