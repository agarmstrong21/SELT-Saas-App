<h2> SIGN UP NOW </h2>
<%= form_tag users_path, :class => 'form' do %>
  <%= label :user, :user_id, "Username", :class => 'col-form-label' %>
  <%= text_field :user, 'user_id', :class => 'form-control', id: 'signupUser' %>
  <%= label :user, :email, "Email", :class => 'col-form-label' %>
  <%= text_field :user, 'email', :class => 'form-control', id: 'signupEmail' %>
  <%= submit_tag 'Create Account', :class => 'btn btn-primary', id: 'signupCreate' %>
<% end %>
