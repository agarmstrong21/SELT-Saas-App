               <div style="background: #3e8e41"></div>
          <% else %>
                <div style="background: #8a1f11"></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div style="min-height:8vh"></div>

  <div class = piles_container>
    <div class="dropdown" style="float: right">
      <button class="dropbtn">≡</button>
      <div class="dropdown-content">
        <a href="#">Move</a>
        <a href="#">Visual</a>
        <a href="#">Delete</a>
      </div>
    </div>
    <div class="piles">
      <% sinks = Pile.where(pile_type: 'sink') %>
      <% sinks.each do |sink| %>

        <div class="pile" >
          <div style="padding: 25px"><div style="background: #dddcdc; border-radius: 5px"><%= sink.Name %></div></div>


          <!-- TODO: CHANGE THIS USING IMG TAGS TO CHANGE THE BACKGROUND IMAGE OF THE CLASS PILE WHEN DECK.VISIBLE IS TRUE OR FALSE-->
